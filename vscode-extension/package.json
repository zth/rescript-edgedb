{
  "name": "vscode-rescript-edgedb",
  "description": "Improve quality-of-life of using EdgeDB in ReScript with VSCode.",
  "version": "0.2.1",
  "main": "./build/extension.js",
  "engines": {
    "vscode": "^1.77.0"
  },
  "scripts": {
    "vscode:prepublish": "yarn build",
    "build:watch": "tsc -w",
    "build:extension": "esbuild ./src/extension.ts --bundle --outfile=build/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "build:clean": "rm -rf build",
    "build": "yarn build:clean && yarn build:extension"
  },
  "author": "Gabriel Nordeborn <gabbe.nord@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/zth/rescript-edgedb"
  },
  "publisher": "GabrielNordeborn",
  "activationEvents": [
    "workspaceContains:**/rescript.json",
    "workspaceContains:**/bsconfig.json"
  ],
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#171E26",
    "theme": "dark"
  },
  "license": "MIT",
  "dependencies": {
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.77.0",
    "esbuild": "^0.17.15"
  }
}
